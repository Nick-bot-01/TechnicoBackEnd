@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@using TechnicoBackEnd.Responses;
@{
    ViewData["Title"] = "User Home Page";
}
@model ResponseApi<List<RepairDTO>>


@{
    //Page Initialization
    int entriesCount = 0;
    List<string> headingIDs = new();
    List<string> collapseIDs = new();
    List<RepairDTO> repairDTOs = new();

    if (Model != null && Model.Value != null)
    {
        for (int i = 0; i < Model.Value.Count; i++)
        {
            headingIDs.Add($"heading{i}");
            collapseIDs.Add($"collapse{i}");
            repairDTOs.Add(Model.Value[i]);
        }
        entriesCount = Model.Value.Count;
    }
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flexible Image Buttons with Bootstrap</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Optional: Add custom hover effect if you want */
        .image-button:hover img {
            transform: scale(1.1);
            opacity: 0.8;
        }

        .image-button img {
            transition: transform 0.3s ease, opacity 0.3s ease;
            width: 100%; /* Make sure images scale to fit their container */
            height: auto; /* Maintain aspect ratio */
        }
    </style>
</head>



<div><h1><b>HomePage. Hello @LoginState.activeUser?.Name</b></h1></div>
<br>

<div><h1><b>Upcoming Repairs</b></h1></div>
<div class="accordion" id="accordionExample">
    @for (int i = 0; i < entriesCount; i++){        
        <div class="accordion-item">
            <h2 class="accordion-header" id=@headingIDs[i]>
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target=#@collapseIDs[i] aria-expanded="false" aria-controls=@collapseIDs[i]>
                    <div>Type: <strong> @repairDTOs[i].RType.ToString() </strong> at Date: <strong> @repairDTOs[i].ScheduledDate.ToString() </strong></div>
                </button>
            </h2>
            <div id=@collapseIDs[i] class="accordion-collapse collapse" aria-labelledby=@headingIDs[i] data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>Property Reference ID: </strong> <i> @repairDTOs[i].Id </i><br>
                    <strong>Description: </strong><i> @repairDTOs[i].Description </i><br>
                    <strong>Cost: </strong><i> @repairDTOs[i].Cost </i><br>
                </div>
            </div>
        </div>
    }
</div>

<!-- The section below might be moved to the nav bar of the web app to enable when logged in and disable when not-->


<!--INTERACTION OF USER-->
<div class="container">
    <!-- Flexible grid layout with Bootstrap -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-6 g-6">
        <div class="col">
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="UserDetails">
            <img src="~/images/user.jpg" alt="User Details" class="img-fluid rounded-3">
            </a>
        </div>
        <div class="col">
            <a class="navbar-brand" asp-controller="UserProperties" asp-action="GetUserPropertiesByUID" asp-route-Id="@LoginState.UserId">
                <img src="~/images/property.jpg" alt="Property Details" class="img-fluid rounded-3">
            </a>
        </div>
        <div class="col">
            <a class="navbar-brand" asp-controller="UserRepairs" asp-action="GetUserRepairsByUID" asp-route-Id="@LoginState.UserId">
                <img src="~/images/repair.png" alt="Repair Details" class="img-fluid rounded-3">
            </a>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>