@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@using TechnicoBackEnd.Responses;
@{
    ViewData["Title"] = "User Details Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flexible Image Buttons with Bootstrap</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Optional: Add custom hover effect if you want */
        .image-button:hover img {
            transform: scale(1.1);
            opacity: 0.8;
        }

        .image-button img {
            transition: transform 0.3s ease, opacity 0.3s ease;
            width: 100%; /* Make sure images scale to fit their container */
            height: auto; /* Maintain aspect ratio */
        }
    </style>
</head>


<div class="text-center my-4">
    <h1><b>Personal Details</b></h1>
</div>
<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/images/user.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title text-center">User Details</h5>
        </div>
        <ul class="list-group list-group-flush">
            @if (LoginState.activeUser != null)
            {
                <li class="list-group-item"><i>Name: </i><b>@LoginState.activeUser.Name</b></li>
                <li class="list-group-item"><i>Surname: </i><b>@LoginState.activeUser.Surname</b></li>
                <li class="list-group-item"><i>Phone: </i><b>@LoginState.activeUser.Phone</b></li>
                <li class="list-group-item"><i>Email: </i><b>@LoginState.activeUser.Email</b></li>
                <li class="list-group-item"><i>VAT: </i><b>@LoginState.activeUser.VAT</b></li>
            }
        </ul>
        <div class="card-body text-center">
            <a class="card-link" asp-area="" asp-controller="User" asp-action="UserUpdate">Update Details</a>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
