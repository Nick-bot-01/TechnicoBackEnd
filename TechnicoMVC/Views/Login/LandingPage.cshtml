@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@{
    ViewData["Title"] = "Landing Page";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 25rem;">
        <h1 class="text-center mb-4">Welcome to Technico</h1>

        @if (!LoginState.IsLoggedIn)
        {
            <h4 class="text-center mb-3">Login</h4>
            <form asp-controller="Login" asp-action="LoginRequest" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <div class="text-center mt-3">
                <p>Don't have an account? <a asp-area="" asp-controller="Login" asp-action="RegisterPage" class="text-decoration-none">Register</a></p>
            </div>
        }
        else
        {
            <div class="alert alert-success text-center" role="alert">
                Welcome @LoginState.activeUser?.Name!
            </div>
        }
    </div>
</div>