@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@{
    ViewData["Title"] = "Landing Page";
}

@if (!LoginState.IsLoggedIn)
{
    <h1>WELCOME TO TECHNICO APPLICATION</h1>

    <h2>Login </h2>
    <div class="login-form">
        <form asp-controller="Login" asp-action="LoginRequest" method="post">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Login</button>
        </form>
        <!-- Error message display, if needed -->
        <div class="error-message">
            <!-- Example: Invalid login credentials -->
        </div>
    </div>
}
else
{
    <div class="error-message">
        Welcome @LoginState.activeUser?.Name !
    </div>
}