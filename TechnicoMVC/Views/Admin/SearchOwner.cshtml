@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@{
    ViewData["Title"] = "Search Owner Page";
}
<h1>WELCOME ADMIN @LoginState.activeUser?.Name </h1>
<br>

<h2>Search Owner</h2>
<div class="login-form">
    <form asp-controller="Admin" asp-action="SearchOwnerResultsCallback" method="post">
        <label for="searchInput">Search</label>
        <input class="m-1" type="text" id="searchInput" name="searchInput" placeholder="Enter VAT or Email" required>
        <br>

        <button class="m-1" type="submit">Search</button>
    </form>
</div>
<div class="container m-2">
    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="OwnersAndProperties">Back to Owners and Properties</a>
</div>