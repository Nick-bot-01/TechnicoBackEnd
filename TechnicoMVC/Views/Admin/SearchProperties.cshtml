@using TechnicoBackEnd.Models;
@using TechnicoBackEnd.Responses;
@using TechnicoBackEnd.DTOs;
@model IEnumerable<TechnicoBackEnd.DTOs.PropertyDTO>;
@{
    ViewData["Title"] = "Properties Search";
}

<form method="get" asp-action="SearchProperties" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="searchDate">Property Identification Number:</label>
        <input type="text" name="PIN" class="form-control" value="@ViewBag.PIN" />
    </div>
    <div class="form-group mr-2">
        <label for="vat">VAT Number:</label>
        <input type="text" name="VAT" class="form-control" value="@ViewBag.VAT" />
    </div>
    <button type="submit" class="btn btn-primary mr-2">Search</button>
    <a asp-action="SearchProperties" class="btn btn-secondary">Clear</a>
</form>

<div class="row">
    @if (Model != null) {
        @foreach (var item in Model)
        {
        <div class="col-md-4 mb-4">
            <div class="card h-100 card-custom">
                <div class="card-body">
                    <p class="card-text"><strong>PIN:</strong> @Html.DisplayFor(modelItem => item.PIN)</p>
                    <p class="card-text"><strong>Address:</strong> @Html.DisplayFor(modelItem => item.Address)</p>
                    <p class="card-text"><strong>Construction Year:</strong> @Html.DisplayFor(modelItem => item.ConstructionYear)</p>
                    <p class="card-text"><strong>Type:</strong> @Html.DisplayFor(modelItem => item.PType)</p>
                </div>
            </div>
        </div>
        }
    }
</div>