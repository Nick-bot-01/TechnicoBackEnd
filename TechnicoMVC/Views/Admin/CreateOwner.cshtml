@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@{
    ViewData["Title"] = "Create Owner Page";
}

<h1>WELCOME ADMIN @LoginState.activeUser?.Name </h1>
<br>

<h2>Register New Owner</h2>
<div class="login-form">
    <form asp-controller="Admin" asp-action="SubmitNewOwner" method="post">
        <label for="email">Email:</label>
        <input class="m-1" type="email" id="email" name="email" required>
        <br>
        <label for="vat">VAT:</label>
        <input class="m-1" type="text" id="vat" name="vat" required>
        <br>

        <label for="name">Name:</label>
        <input class="m-1" type="text" id="name" name="name" required>
        <br>

        <label for="surname">Surname:</label>
        <input class="m-1" type="text" id="surname" name="surname" required>
        <br>

        <label for="address">Address:</label>
        <input class="m-1" type="text" id="address" name="address" required>
        <br>

        <label for="phone">Phone:</label>
        <input class="m-1" type="text" id="phone" name="phone" required>
        <br>

        <label for="password">Password:</label>
        <input class="m-1" type="password" id="password" name="password" required>
        <br>

        <button class="m-1" type="submit">Register</button>
    </form>
</div>
<div class="container m-2">
    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="OwnersAndProperties">Back to Owners and Properties</a>
</div>