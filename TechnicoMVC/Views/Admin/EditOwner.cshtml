@using TechnicoBackEnd.Auth
@using TechnicoBackEnd.DTOs;
@{
    ViewData["Title"] = "Edit Owner Page";
}
@model UserDTO
<h1>WELCOME ADMIN @LoginState.activeUser?.Name </h1>
<br>

<h2>Edit Owner</h2>
<div class="update-form">
    <form asp-controller="Admin" asp-action="UpdateOwnerCallback" method="post">
        <!-- Hidden field for Id to pass it along with the form data -->
        <input type="hidden" asp-for="Id" />

        <label for="email">Email:</label>
        <input type="email" id="email-view" value="@Model.Email" disabled />
        <input type="hidden" id="email" asp-for="Email" />
        <br>

        <label for="vat">VAT:</label>
        <input type="email" id="vat-view" value="@Model.VAT" disabled />
        <input type="hidden" id="vat" asp-for="VAT" />
        <br>

        <label for="name">Name:</label>
        <input type="text" id="name" asp-for="Name" required />
        <br>

        <label for="surname">Surname:</label>
        <input type="text" id="surname" asp-for="Surname" required />
        <br>

        <label for="address">Address:</label>
        <input type="text" id="address" asp-for="Address" required />
        <br>

        <label for="phone">Phone:</label>
        <input type="text" id="phone" asp-for="Phone" required />
        <br>

        <button type="submit">Update</button>
    </form>
    <!-- Error message display, if needed -->
    <div class="error-message">
        <!-- Example: Invalid login credentials -->
    </div>
</div>